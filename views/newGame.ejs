<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Add New Game</title>
</head>
<body>
    <h1>Add a New Game</h1>

    <form action="/games" method="POST">
        <label for="title">Title:</label>
        <input type="text" name="title" id="title" required><br><br>

        <label for="platform">Platform:</label>
        <input type="text" name="platform" id="platform" required><br><br>

        <label for="release_date">Release Date:</label>
        <input type="date" name="release_date" id="release_date" required><br><br>

        <label for="genre_id">Genre:</label>
        <select name="genre_id" id="genre_id" required>
            <% genres.forEach(genre => { %>
                <option value="<%= genre.id %>"><%= genre.name %></option>
            <% }) %>
        </select><br><br>

        <label for="developer_ids">Developer(s):</label>
        <select name="developer_ids" id="developer_ids" multiple required>
            <% devs.forEach(dev => { %>
                <option value="<%= dev.id %>"><%= dev.name %></option>
            <% }) %>
        </select>
        <p><small>Hold Ctrl (or Cmd) to select multiple developers</small></p><br><br>

        <button type="submit">Add Game</button>
    </form>
    <a href="/">
        <button>Go back</button>
    </a>
</body>
</html>
